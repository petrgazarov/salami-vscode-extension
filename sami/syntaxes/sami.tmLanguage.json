{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Salami Natural Language",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.sami",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "keyword.other.unit.suffix.integer.sami",
					"match": "(^-?[0-9][0-9\\.]+$)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.sami",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sami",
					"match": "\\\\."
				}
			]
		},
		"comment-block": {
			"begin": "/\\*",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.comment.begin.sami"
				}
			},
			"end": "\\*/",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.comment.end.sami"
				}
			},
			"name": "comment.block.sami"
		}
	},
	"scopeName": "source.sami"
}